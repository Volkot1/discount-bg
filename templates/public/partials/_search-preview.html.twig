{% for product in products %}
    <li class="search-preview-product">
        <a href="{{ path('app_public_product_info', {productSlug: product.slug}) }}" class="text-decoration-none text-black">
            <img
                    src="{{ product.mainImage }}"
                    width="50px"
                    height="50px"
                    class="d-inline"
            >
            <p class="d-inline">{{ product.title| length >= 40 ? product.title | u.truncate(40)~'...' : product.title }}</p>
        </a>
    </li>
{% else %}
    <p style="padding-top: 20px; padding-left: 10px; padding-bottom: 0px; color: black">Няма намерени резултати!</p>
{% endfor %}